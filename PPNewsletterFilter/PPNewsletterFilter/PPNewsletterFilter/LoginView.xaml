<Window x:Class="PPNewsletterFilter.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPNewsletterFilter"
        mc:Ignorable="d"
        Title="LoginView" Height="450" Width="800"
        ResizeMode="NoResize"     
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2D4E3E" Offset="0" />
            <GradientStop Color="#44705b" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Mail Login"
                       Foreground="#61A888"
                       FontWeight="Black"
                       FontFamily="Montserrat"
                       FontSize="14"
                       Grid.Column="0"
                       VerticalAlignment="center"
                       HorizontalAlignment="center"/>
            </Grid>

            <StackPanel Width="350"
                    Grid.Row="2"            
                    Orientation="Vertical"
                    Margin="0,30,0,0">

                <Image Source="images/logo.png"
                    Width="110"
                    Height="110"/>

                <TextBlock Text="Unsubscribe Newsletter"
                    Foreground="WhiteSmoke"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    TextAlignment="Center"
                    Margin="0,5,0,0"/>


                <TextBlock  Text="Mail"
                    Foreground="WhiteSmoke"
                    FontSize="14"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Margin="0,35,0,0"/>

                <TextBox x:Name="txtEmail"
                    FontSize="13"
                    FontWeight="Normal"
                    FontFamily="Montserrat"
                    Height="30"
                    CaretBrush="Black"
                    Background="#61A888"
                    BorderBrush="#2D4E3E" TextChanged="txtEmail_TextChanged">

                </TextBox>

                <TextBlock  Text="Password"
                    Foreground="WhiteSmoke"
                    FontSize="14"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Margin="0,10,0,0"/>

                <PasswordBox x:Name="pwdPassword"
                    FontSize="13"
                    FontWeight="Normal"
                    FontFamily="Montserrat"                    
                    Height="30"
                    CaretBrush="Black"
                    Background="#61A888"
                    BorderBrush="#2D4E3E">
                </PasswordBox>

                <Button x:Name="btnLogin"
                Background="#2D4E3E"
                BorderThickness="0"
                Content="Login"
                Foreground="White"
                FontSize="12"
                FontFamily="Montserrat"
                Cursor="Hand"
                Grid.Column="2"
                Margin="0,40,0,0"  
                Padding="3,4,3,4"
                Width="50"
                Click="btnLogin_Click">
                </Button>


            </StackPanel>

        </Grid>

        <Grid Name="loadingOverlay" 
            Background="#345B49" 
            Visibility="Collapsed">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock Text="Loading..." Foreground="White" FontSize="20" />
                <ProgressBar IsIndeterminate="True" Width="150" Height="20" />

            </StackPanel>

        </Grid>
    </Grid>


</Window>