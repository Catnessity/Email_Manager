<Window x:Class="PPNewsletterFilter.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPNewsletterFilter"
        mc:Ignorable="d"
        Title="LoginView" Height="450" Width="800"
        ResizeMode="NoResize"     
        WindowStartupLocation="CenterScreen"
        Background="White">


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Background="#f3e0ff">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Mail Login"
                       FontWeight="Black"
                       FontFamily="Montserrat"
                       FontSize="14"
                       Grid.Column="0"
                       VerticalAlignment="center"
                       HorizontalAlignment="center"/>
        </Grid>
        
            <StackPanel Width="350"
                        Grid.Row="2"            
                        Orientation="Vertical"
                        Margin="0,30,0,0">
                
            <Ellipse Height="100" Fill="#44076e" Width="100"/>
            <!--<Image Source="="
                   Width="100"
                   Height="^100"/>-->
            <TextBlock Text="Unsubscribe Newsletter"
                       FontSize="12"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       TextAlignment="Center"
                       Margin="0,5,0,0"/>


            <TextBlock  Text="Mail"
                        FontSize="14"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        Margin="0,35,0,0"/>

            <TextBox x:Name="txtEmail"
                     FontSize="13"
                     FontWeight="Normal"
                     FontFamily="Montserrat"
                     Height="30"
                     CaretBrush="Black"
                     Background="#f3e0ff"
                     BorderBrush="#44076e" TextChanged="txtEmail_TextChanged">
                
            </TextBox>

            <TextBlock  Text="Password"
                        FontSize="14"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        Margin="0,10,0,0"/> 

            <PasswordBox x:Name="pwdPassword"
                     FontSize="13"
                     FontWeight="Normal"
                     FontFamily="Montserrat"                    
                     Height="30"
                     CaretBrush="Black"
                     Background="#f3e0ff"
                     BorderBrush="#44076e">

            </PasswordBox>

            <Button x:Name="btnLogin"
                    Background="#44076e"
                    BorderThickness="0"
                    Content="Login"
                    Foreground="White"
                    FontSize="12"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="2"
                    Margin="0,40,0,0"  
                    Padding="3,4,3,4"
                    Width="50"
                    Click="btnLogin_Click">
            </Button>
                


        </StackPanel>
        
      
    </Grid>
 

</Window>
